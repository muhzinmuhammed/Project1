<body>
    <main>
        
        <!--================login_part Area =================-->
        <section class="login_part section_padding ">
            <div class="container">
                <% if (typeof alert !== 'undefined') { %>
                    <div id="alert" class="alert alert-danger">
                      <%= alert %>
                    </div>
                  <% } %>
                  <% if(locals.message) { %>
                    <div id="msg" class="alert alert-danger"><%- locals.message -%></div>
           <% } %>
                  <% if(locals.wrong) { %>
                    <div id="msg" class="alert alert-danger"><%- locals.wrong -%></div>
           <% } %>

               
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_text text-center">
                            <div class="login_part_text_iner">
                                <h2>New to our Shop?</h2>
                                <p>There are advances being made in science and technology
                                    everyday, and a good example of this is the</p>
                                <a href="/user_signup" class="btn_3">Create an Account</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_form">
                            <div class="login_part_form_iner">
                                <h3>Welcome Back ! <br>
                                    Please Sign in now</h3>
                                <form class="row contact_form" action="/login" method="post" novalidate="novalidate">
                                    <div class="col-md-12 form-group p_star">
                                        <div class="row">

                                      
                                        <input type="text" class="form-control" id="phone" name="phone" value=""
                                            placeholder="Phone Number">
                                        </div>
                                    </div>
                                    <div class="col-md-12 form-group p_star">
                                        <div class="row">
                                        <input type="password" class="form-control col-lg-9" id="password" name="password" value=""
                                            placeholder="Password"><i class="fas fa-eye col-md-1" id="togglePassword" ></i>
                                        </div>
                                    </div>
                                    <div class="col-md-12 form-group">
                                       
                                        <button type="submit" value="submit" class="btn_3">
                                            log in
                                        </button>

                                        <button type="button" class="btn btn-info">
                                          <a href="/login_with_otp">  Login With OTP</a></button>
                                          
                                        <a class="lost_pass" href="/forget_password">forget password?</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================login_part end =================-->
    </main>
    <script>
        setTimeout(() => {
            document.getElementById('alert').style.display="none"
            
        }, 3000);
    </script>
    <script>
        setTimeout(() => {
            document.getElementById('msg').style.display="none"
            
        }, 3000);
    </script>
      <script>
        const togglePassword = document.querySelector('#togglePassword');
      const password = document.querySelector('#password');
    
      togglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('fa-eye-slash');
    });
      </script>

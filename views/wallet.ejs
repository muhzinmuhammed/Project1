<%- include('includes/header'); -%>
<div class="card">
        
    <div class="card-body">
        <div class="table-responsive">
            <table id="tableID" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Order Id</th>
                        <th>Order Date</th>
                        <th>Wallet Status</th>
                        <th>Price</th>

                      
                    </tr>
                </thead>
              
                
                <tbody class="bg-light">
                   
                    <% orders.forEach(function(orders,index) { %>

                        <tr>
                           
                            <td><%= index+1 %></td>
                            <td><%= orders._id  %></td>
                            <td><%=orders.createdAt.toLocaleDateString()  %></td>
                            <td><%= orders.isWallet %></td>
                            <td><%= orders.total %></td>
                        </tr>
                        
                    <% }) %>
                    
                  
                  
                </tbody>



            </table>

           
        </div>
    </div>
</div>


<% if (sum) {%>

<div class="container">
    <div class="col-lg-12">
       <h3 class="bg-light">Balance: <%= sum %></h3>
      
    </div>
</div>



<% } else { %>

    <h1>No Wallet Data</h1>

    <% } %>
 


<%- include('includes/footer'); -%>
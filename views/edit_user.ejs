<div class="conatiner">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4   ">
               <h1 class="bg-primary text-white">
                Edit user <%= user.name %>
               </h1>

                <form action="/update_users/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="name">Name:</label>
                      <input type="text" class="form-control" id="name" value="<%= user.name %>" name="name">
                    </div>
                    <div class="form-group">
                      <label for="email">Email address:</label>
                      <input type="email" class="form-control" value="<%= user.email %>" id="email" name="email">
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="tel" class="form-control" value="<%= user.phone %>" id="phone" name="phone">
                      </div>
                    <div class="form-group mt-3">
                      <label for="image">Photo file:</label>
                      <input type="file" class="form-control-file" id="image" name="image">
                      <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-3" m alt="">
                    </div>
                    
                    <button type="submit" class="btn btn-primary d-grid mt-5">Submit</button>
                  </form>
            </div>
        </div>
</div>
</body>
</html>